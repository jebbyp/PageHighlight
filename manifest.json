{
	"manifest_version": 2,

	"name": "PageHighlight",
	"description": "Highlight text on the page itself and saves it.",
	"version": "1.0",

	"browser_action": {
		"default_popup": "popup.html"
	},

	"permissions": [
		"contextMenus",
		"storage"
	],

	"icons": {
		"16": "highlighter.png"  //<a href="https://icons8.com">Icon pack by Icons8</a>
	},

	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"css": ["style.css"],
			"js": ["content.js"],
			"run_at": "document_end"
		}
	]
}